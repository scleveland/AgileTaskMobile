<div id="pageTitle">
		<h1>Edit <%= @user.api_key%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @user.object %>
    <%= link_to "Delete", :action => :delete, :id => @user.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @user.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Api key: </td>
              			<td class="itemValue"><input type="text" name="user[api_key]" value="<%= @user.api_key %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
